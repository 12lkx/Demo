<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
   <androidx.cardview.widget.CardView
       android:layout_width="370dp"
       android:layout_height="120dp"
       app:cardCornerRadius="8dp">
       <LinearLayout
           android:layout_width="370dp"
           android:layout_height="120dp"
           android:orientation="vertical">
       <LinearLayout
           android:layout_width="370dp"
           android:layout_height="90dp"
           android:orientation="horizontal">


           <LinearLayout
               android:layout_width="280dp"
               android:layout_height="match_parent"
               android:orientation="vertical">
           <TextView
               android:id="@+id/tv_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:layout_marginLeft="15dp"
               android:text="千手柱间"
               android:textSize="16sp"
               android:textStyle="bold"/>
             <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp">

                 <com.makeramen.roundedimageview.RoundedImageView
                     android:id="@+id/user_img"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:layout_marginLeft="15dp"
                     app:riv_corner_radius="15dp"
                     app:riv_oval="false"
                     app:riv_mutate_background="true"
                     android:scaleType="fitXY"
                     android:background="@drawable/manimage"></com.makeramen.roundedimageview.RoundedImageView>
                 <TextView
                     android:layout_marginLeft="3dp"
                     android:id="@+id/tv_username"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="liweichao"

                     android:layout_marginTop="7dp">

                 </TextView>
             </LinearLayout>


           <TextView
               android:layout_marginLeft="15dp"
               android:id="@+id/tv_trump"
               android:layout_width="match_parent"
               android:layout_height="20dp"

               android:textSize="12sp"
               android:text="木遁" />
           </LinearLayout>
           <ImageView
               android:id="@+id/iv_school"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:scaleType="fitXY"
               android:layout_marginLeft="5dp"
               android:layout_gravity="center"
               android:adjustViewBounds="true">
           </ImageView>
       </LinearLayout>
           <View
               android:layout_width="350dp"
               android:layout_gravity="center"
               android:layout_height="1dp"
               android:layout_marginTop="2dp"

               android:background="@color/divider1" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <ImageButton
               android:id="@+id/btn_share"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_marginLeft="20dp"
               android:src="@drawable/ic_baseline_share_24"
               android:background="#fff"></ImageButton>
           <ImageButton
               android:id="@+id/btn_textsms"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_marginLeft="130dp"
               android:src="@drawable/ic_baseline_textsms_24"
               android:background="#fff"
               ></ImageButton>
           <ImageButton
               android:id="@+id/btn_praise"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_marginLeft="100dp"
               android:src="@drawable/praise"
               android:background="#fff"
               ></ImageButton>
           
       </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>