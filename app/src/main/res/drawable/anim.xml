<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-100dp"
        android:top="-50dp"
        android:left="0dp"
        android:right="30dp"
        >//外边距，因为它是斜的所以要留点空间
        <rotate
            android:fromDegrees="-9"
            android:pivotX="0%"
            android:pivotY="0%">//倾斜
            <shape android:shape="rectangle">
                <gradient
                    android:angle="0"
                    android:endColor="#55ffffff"
                    android:startColor="#ccffffff" />//渐变
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="-100dp"
        android:left="13dp"
        android:right="23dp"
        android:top="-50dp">
        <rotate
            android:fromDegrees="-9"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#55ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>
